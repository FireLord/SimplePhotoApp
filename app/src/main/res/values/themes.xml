<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GrowighAssignment" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.GrowighAssignment" parent="Base.Theme.GrowighAssignment" />

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/Widget.Material3.CircularProgressIndicator</item>
        <item name="trackThickness">2dp</item>
    </style>
    <style name="Feed.Fragment.StatusBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>